<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onClickBackground"
    android:background="@drawable/rect2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/rect2"
        android:elevation="6dp"

        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/partition"

            />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/partition"
            android:layout_marginEnd="4dp"
            android:background="@drawable/rectbutton2"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:elevation="6dp"
            android:layout_marginBottom="5dp"
            android:focusable="true"
            android:foreground="@drawable/ripple_effect1"
            android:src="@drawable/ic_navigate_before_black_24dp"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/partition"
            android:layout_marginStart="4dp"
            android:background="@drawable/rectbutton2"
            android:elevation="6dp"
            android:foreground="@drawable/ripple_effect1"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:src="@drawable/ic_navigate_next_black_24dp"/>
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl"


>
<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center|end"
        android:gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:fontFamily="@font/poppins_light"
        android:id="@+id/mainHead2"
        android:layout_below="@id/recyclerView"/>
    <TextView
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_toEndOf="@+id/mainHead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:layout_marginStart="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="@font/poppins_light"
        android:id="@+id/subHead2"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_below="@+id/subHead2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text=" BENEFITS"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_light"
        android:id="@+id/subHead3"

        />
    <TextView
        android:layout_gravity="end"
        android:gravity="start"
        android:layout_below="@+id/subHead3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"

        android:text="Curls work the biceps muscles at the front of the upper arm, and also the muscles of the lower armâ€”the brachialis, and brachioradialis.You use these muscles anytime you pick something up, which is common throughout daily life. Doing the arm curl, you build strength and learn to use your arm muscles correctly, bracing with your core muscles."
        android:fontFamily="@font/poppins_light"
        android:paddingBottom="30dp"
        android:id="@+id/content"


        />




</RelativeLayout>

</ScrollView>
</RelativeLayout>
